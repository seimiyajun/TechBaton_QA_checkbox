<h1>New Member</h1>

<%= form_with(model: @member_registration, local: true) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.collection_check_boxes :position, @positions, :id, :name, include_hidden: false do |ccb| %>
      <%= ccb.label { ccb.check_box + ccb.text } %>
    <% end %>
  </div>


  <div class="field">
    <%= form.label :introduction %>
    <%= form.text_area :introduction %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', members_path %>
